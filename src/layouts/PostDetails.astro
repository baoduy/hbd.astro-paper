---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import { Tooltips } from 'astro-tooltips';

export interface Props {
  post: CollectionEntry<"blog">;
  next?:{title:string, url:string},
  previous?:{title:string, url:string}
}

const { post,next,previous } = Astro.props;
const { title, author, description, ogImage, canonicalURL, pubDatetime, tags } = post.data;
const { Content } = await post.render();
const ogUrl = new URL(ogImage ? ogImage : `${title}.png`, Astro.url.origin).href;
---

<Layout title={title} author={author} description={description} ogImage={ogUrl} canonicalURL={canonicalURL}>
  <Header />
  <Tooltips interactive={true}  />
  <div class="mx-auto flex w-full max-w-4xl justify-start px-2">
    <button
      class="focus-outline mb-2 mt-8 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <h1 class="post-title">{title}</h1>
    <Datetime datetime={pubDatetime} size="lg" className="my-2" />
    <article id="article" role="article" class="prose mx-auto mt-8 max-w-4xl">
      <Content />
    </article>

    <ul class="tags-container">
      {tags.map(tag => <Tag name={slugifyStr(tag)} />)}
    </ul>
    <div class="bottom-nav">
      { previous ? <a
          class="focus-outline mb-2 mt-8 flex hover:opacity-75"
          title={previous.title}
          href={previous.url}
      >
        <svg xmlns="http://www.w3.org/2000/svg"
        ><path
            d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
        </svg><span>Previous</span>
      </a> : <div/>
      }
      {next ? <a
          class="focus-outline mb-2 mt-8 flex hover:opacity-75"
          title={next.title}
          href={next.url}
      ><span>Next</span>
        <svg class="svg-rotate" xmlns="http://www.w3.org/2000/svg"
        ><path
            d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
        </svg>
      </a> : <div/>
      }
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-4xl px-4 pb-12;
  }
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .tags-container {
    @apply my-8;
  }
  .svg-rotate {
    transform: rotate(180deg);
    transform-origin: 50% 50%;
  }
  .bottom-nav {
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
  }
</style>
